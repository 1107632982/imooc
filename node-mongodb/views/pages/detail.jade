extends ../layout
block content 
  .container
    .row
      .col-7
        embed(src="#{movie.flash}", allowFullScreen="true", quality="high", height="400", width="600", type="application/x-shockwave-flash")
      .col-5
        dl.dl-horizontal
          dt 电影名字
          dd=movie.title
          dt 导演
          dd=movie.director
          dt 国家
          dd=movie.country
          dt 上映年份
          dd=movie.year
          dt 语言
          dd=movie.language
          dt 简介
          dd=movie.summary 
  

         