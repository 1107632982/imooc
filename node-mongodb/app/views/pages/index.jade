extends ../layout
block content 
  .container.my-md-3
    each cat in categories
      .card.my-md-3
        .card-header
          h3 
            a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
        .card-body
          if cat.movies && cat.movies.length > 0
            .row.justify-content-around
              each item in cat.movies 
                .col-md-3
                  .thumbnail
                    a(href="/movie/"+ item._id)
                      if item.poster.indexOf('http:') > -1 
                        img.poster(src=item.poster, alt="#{item.title}")
                      else if item.poster.indexOf('https:') > -1 
                        img.poster(src=item.poster, alt="#{item.title}")
                      else
                        img.poster(src="/upload/#{item.poster}", alt="#{item.title}")
                    .caption
                      h4 #{item.title}
                      p: a.btn.btn-block.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片

     